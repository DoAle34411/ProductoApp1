                    <EntryCell x:Name="Cantidad"
                               Placeholder="Cantidad"/>
                    <TextCell Text="Genero Libro:"></TextCell>
                    <EntryCell x:Name="Genero"
                               Placeholder="Genero"/>
                    <TextCell Text="Descripcion Libro:"></TextCell>
                        <EntryCell x:Name="Descripcion"
                               Placeholder="DescripciÃ³n"/>
                    </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Guardar Producto"
                FontSize="15"
                Margin="5"
                Clicked="OnClickGuardarNuevoProducto"/>

    </VerticalStackLayout>
        </ScrollView>
