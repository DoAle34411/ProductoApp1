<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductoApp1.DetalleProductoPage"
             Title="DetalleProductoPage">
    <VerticalStackLayout>
        <Image Source="dotnet_bot.png"
               HorizontalOptions="Center"
               HeightRequest="200"/>
        <Label x:Name="Nombre"
               Text="Nombre"
               FontSize="32"
               HorizontalOptions="Center"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="Cantidad: "
                    FontSize="18"/>
            <Label x:Name="Cantidad"
                    Text="Cantidad"
                    FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="DecripciÃ³n: "
                    FontSize="18"/>
            <Label x:Name="Descripcion"
                    Text="Descripcion"
                    FontSize="18"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button
                Text="Editar"
                FontSize="20"
                HorizontalOptions="Fill"
                Margin="10"
                Clicked="OnClickEditar"
                BackgroundColor="GreenYellow"
            />
            <Button
                Text="Borrar"
                FontSize="20"
                HorizontalOptions="Fill"
                Margin="10"
                Clicked="OnClickBorrar"
                BackgroundColor="Red"
            />
        </StackLayout>
        <Button
            Text="Regresar"
            FontSize="20"
            HorizontalOptions="Fill"
            Margin="10"
            Clicked="OnClickVolver"
        />
    </VerticalStackLayout>
</ContentPage>